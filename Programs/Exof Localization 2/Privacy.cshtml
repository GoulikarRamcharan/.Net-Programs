@using System.Globalization
@{
    var culture = CultureInfo.CurrentCulture;
    var isHindi = culture.Name.StartsWith("hi", StringComparison.OrdinalIgnoreCase);
    ViewData["Title"] = isHindi ? "गोपनीयता नीति" : "Privacy Policy";

}
<h1>@ViewData["Title"]</h1>

<p>
    @(isHindi ? "अपनी साइट की गोपनीयता नीति का विवरण देने के लिए इस पृष्ठ का उपयोग करें।" : "Use this page to detail your site's privacy policy.")
</p>
